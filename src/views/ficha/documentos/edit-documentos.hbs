<div class="col-md-auto mx-auto">
    <div class="card text-center">
        <div class="card-body">
            <div class="form-row">
                <div class="col">
                    <div class="form-group d-flex justify-content-center">
                        <h2>Editar documentos</h2>
                    </div>
                </div>
            </div>
            <hr>
            <form action="/ficha/edit-documentos/{{datos._id}}?_method=PUT" method="POST" enctype="multipart/form-data">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-row text-center">
                    <div class="col">
                        <div class="form-group">
                            <h4 for="">Selecciona el documento</h4>
                        </div>
                    </div>
                </div>
                <div class="form-row text-center">
                    <div class="col">
                        <div class="form-group">
                            <input style="background-color: white;" name="{{datos.documentType}}" type="file" id="documento"
                                placeholder="Buscar" required>
                        </div>
                    </div>
                </div>
                <div class="form-group d-flex justify-content-center">
                    <button class="btn btn-primary btn-block w-auto">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>