        <li class="page-item active"><a class="page-link" href="/ficha/datos-se" id="tres">3</a></li>
        <li class="page-item"><a class="page-link" href="/ficha/documentos" id="cuatro">4</a></li>
        <li class="page-item"><a class="page-link" href="/ficha/documentos" id="Siguiente">Siguiente</a></li>
    </ul>
</div>
{{/if}}